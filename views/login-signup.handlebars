<div class="row">
  <h2 class="signup-login__heading">Log In</h2>
  <div class="col s12">
    <div class="row">
      <div id="login-form" class="input-field col s6">
        <input id="username-input-login" type="username" />
        <label for="username">Username</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <input id="password-input-login" type="password" />
        <label for="password">Password</label>
      </div>
    </div>
    <div class="row">
      <button
        class="btn waves-effect waves-light"
        type="submit"
        name="action"
      >Submit
      </button>
    </div>
  </div>
</div>

<div class="row">
  <h2 class="signup-login__heading">Not a Member? Join Now!</h2>
  <div class="col s12">
    <div class="row">
      <div id="signup-form" class="input-field col s6">
        <input id="username-input-signup" type="email" />
        <label for="username">Username</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <input id="email-input-signup" type="email" />
        <label for="email">Email</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <input id="password-input-signup" type="password" />
        <label for="password">Password</label>
      </div>
    </div>
    <div class="row">
      <button
        class="btn waves-effect waves-light"
        type="submit"
        name="action"
      >Submit
      </button>
    </div>
  </div>
</div>

<script src="../public/js/login.js"></script>
